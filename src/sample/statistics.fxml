                </ImageView>
                <Button fx:id="BtnHome" layoutX="679.0" layoutY="12.0" mnemonicParsing="false" onAction="#showMenu" prefHeight="41.0" prefWidth="90.0" style="-fx-background-color: transparent; -fx-border-color: black; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-width: 1px;" text="Home">
